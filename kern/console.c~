#include <p1kern.h>
#include <stdio.h>

int cursor_row = 0, cursor_col = 0;
char current_color;
int putbyte(char ch) {
	/*int row,col;
	row = current_cursor_position/CONSOLE_WIDTH;
	col = (current_cursor_position%CONSOLE_WIDTH)%CONSOLE_HEIGHT;*/

	int *color;	
	*(char *)(CONSOLE_MEM_BASE + 2 * (CONSOLE_WIDTH * cursor_row + cursor_col)) = ch;
	get_term_color(color);
	*(char *)(CONSOLE_MEM_BASE + 2 * (CONSOLE_WIDTH * cursor_row + cursor_col) + 1) = color;
	cursor_col++;
	if(cursor_col>CONSOLE_WIDTH) {
		cursor_col = 0;
		cursor_row ++;
	}
	return ch;
}

